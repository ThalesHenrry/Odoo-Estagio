<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_inv" model="ir.actions.act_window">
        <field name="name">Invent치rio</field>
        <field name="res_model">inventario</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="Inventario_root" name="Invent치rio"
              web_icon="inventario,static/description/icon.png"/>
    <menuitem id="sub_inventario" name="Invent치rio" parent="Inventario_root" action="action_inv"/>

    <record id="inv_form" model="ir.ui.view">
        <field name="name">inv.form</field>
        <field name="model">inventario</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Funcion치rio"/>
                            <field name="dep" force_save="1"/>
                        </group>
                        <group>
                            <field name="ip"/>
                            <field name="ramal"/>
                            <field name="pr"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Hardware">
                            <group>
                                <group>
                                    <field name="comp"/>
                                    <field name="dum"/>

                                    <field name="moni">
                                        <tree>
                                            <field name="name" decoration-bf="1" decoration-primary="1" widget="badge" />
                                            <field name="product_template_variant_value_ids" widget="many2many_tags"/>
                                            <field name="dependente"/>
                                        </tree>
                                    </field>

                                    <field name="tm"/>
                                    <field name="dres"/>

                                    <field name="head" attrs="{'invisible':[('hitec', '!=', 7)]}"/>

                                </group>
                            </group>
                        </page>
                        <page string="Software">
                            <group>
                                <group>
                                    <field name="acessor"/>
                                    <field name="office"/>
                                    <field name="comuni"/>
                                    <field name="hitec"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="inv_list" model="ir.ui.view">
        <field name="name">inv.list</field>
        <field name="model">inventario</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" decoration-bf="1"/>
                <field name="dep"/>
                <field name="ip"/>
                <field name="ramal"/>
            </tree>
        </field>
    </record>

     <record id="search_view_inv" model="ir.ui.view">
        <field name="name">search.view.inv</field>
        <field name="model">inventario</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="dep"
                           icon="fa fa-filter"
                           select="multi"
                           enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>